unit Bhaskara;

interface

type
  TBhaskara = class
  private
    FCoefA, FCoefB, FCoefC: Double;
  public
    constructor Create(a, b, c: Double);
    function CalcularDelta: Double;
    function Raizes: string;
  end;

implementation

constructor TBhaskara.Create(a, b, c: Double);
begin
  FCoefA := a;
  FCoefB := b;
  FCoefC := c;
end;

end.
